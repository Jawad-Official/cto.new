# Global environment variables
# Copy this file to .env for Docker Compose

# OpenRouter API Key (Required for AI features)
OPENROUTER_API_KEY=sk-your-openrouter-api-key-here

# Cloudflare R2 Storage (for file attachments)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_BUCKET_NAME=linear-attachments
CLOUDFLARE_ACCOUNT_URL=https://<your-account-id>.r2.cloudflarestorage.com
CLOUDFLARE_PUBLIC_URL=https://your-custom-domain.com  # Optional: if using custom domain

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=linear_clone
