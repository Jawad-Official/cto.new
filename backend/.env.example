# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/linear_clone?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# OpenRouter
OPENROUTER_API_KEY="sk-your-openrouter-api-key"

# Cloudflare R2 Storage
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_BUCKET_NAME="linear-attachments"
CLOUDFLARE_ACCOUNT_URL="https://<your-account-id>.r2.cloudflarestorage.com"
CLOUDFLARE_PUBLIC_URL="https://your-custom-domain.com"  # Optional: if using custom domain

# SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Linear Clone <noreply@linear-clone.com>"

# Slack Integration
SLACK_CLIENT_ID="your-slack-client-id"
SLACK_CLIENT_SECRET="your-slack-client-secret"
SLACK_REDIRECT_URI="http://localhost:4000/integrations/slack/callback"

# GitHub Integration
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:4000/integrations/github/callback"

# App
PORT="4000"
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
